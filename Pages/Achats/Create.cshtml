@page
@model Back_Gestion.Pages.Achats.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h4 style="text-align:center" class="m-0 font-weight-bold text-primary">Création d'un nouveau Achat</h4>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Achat.idUtilisateur" class="control-label"></label>
                <select asp-for="Achat.idUtilisateur" class="form-control" asp-items="ViewBag.idUtilisateur"></select>
            </div>
            <div class="form-group">
                <label asp-for="Achat.idProduit" class="control-label"></label>
                <select asp-for="Achat.idProduit" class="form-control" asp-items="ViewBag.idProduit"></select>
            </div>
            <div class="form-group">
                <label asp-for="Achat.qte" class="control-label"></label>
                <input asp-for="Achat.qte" class="form-control" />
                <span asp-validation-for="Achat.qte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Achat.mttAR" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <input asp-for="Achat.mttJeton" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="Achat.dateAchat" class="control-label"></label>
                <input asp-for="Achat.dateAchat" class="form-control" />
                <span asp-validation-for="Achat.dateAchat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input style="float:right" type="submit" value="Effectuer cet achat" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
