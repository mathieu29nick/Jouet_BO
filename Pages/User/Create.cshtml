@page
@model Back_Gestion.Pages.User.CreateModel

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h4 style="text-align:center" class="m-0 font-weight-bold text-primary">Création d'un nouveau Utilisateur</h4>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Utilisateur.pseudo" class="control-label"></label>
                <input asp-for="Utilisateur.pseudo" class="form-control" />
                <span asp-validation-for="Utilisateur.pseudo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Utilisateur.mdp" class="control-label"></label>
                <input asp-for="Utilisateur.mdp" class="form-control" />
                <span asp-validation-for="Utilisateur.mdp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Utilisateur.role" class="control-label"></label>
                <select asp-for="Utilisateur.role" class="form-control" asp-items="Model.Roles"></select>
                <span asp-validation-for="Utilisateur.role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Jeton.idUtilisateur" />
            </div>
            <div class="form-group">
                <input style="float:right" type="submit" value="Ajouter" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
